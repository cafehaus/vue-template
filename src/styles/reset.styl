// 通用样式重置
body
button
input
select
textarea
h1
h2
h3
h4
h5
ul
dl
dd
p
fieldset
figure
  margin 0

ul
ol
li
dl
dt
dd
tr
td
fieldset
input
  padding 0

// 去除外框和去除聚焦时的阴影
a
a:active
input
textarea
select
button
  outline 0
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-tap-highlight-color transparent

a
  color inherit
  cursor pointer

li
  list-style none

// 图片靠上对其及图片自适应
img
  height auto
  vertical-align top

// 重置自动填充样式
input:-webkit-autofill
textarea:-webkit-autofill
select:-webkit-autofill
  box-shadow 0 0 0 1000px white inset
  -webkit-text-fill-color inherit
